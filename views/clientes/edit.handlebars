<div class="content" style="margin-top: 20px; margin-left: 180px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Editar CLiente: {{cliente.nome}}</h4>
                        <p class="card-category">Clientes</p>
                    </div>

                    <div class="card-body">
                        <form action="/clientes/edit" method="post">
                            <input type="hidden" name="id" value="{{cliente.idCliente}}" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="nome" class="bmd-label-floating">Nome:</label>
                                        <input type="text" name="nome" value="{{cliente.nome}}" class="form-control" required="true" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="nome" class="bmd-label-floating">E-mail:</label>
                                        <input type="email" name="email" value="{{cliente.email}}" class="form-control" required="true" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="nome" class="bmd-label-floating">Telefone:</label>
                                        <input type="text" name="telefone" value="{{cliente.telefone}}" class="form-control" required="true" />
                                    </div>
                                </div>
                            </div>
                            <button id="btnEditar" type="button" class="btn btn-primary pull-right"  data-toggle="modal" data-target="#mymodal">Salvar Alterações</button>
                            <a class="btn btn-secundary pull-left" href="/clientes/allClientes">Voltar </a>
                            <div class="clearfix"></div>
                            <!--Modal abaixo-->
                            <div id="mymodal" class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Deseja salvar alterações no Cliente?</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        {{!-- <div class="modal-body">
                                            Deseja Editar os dados?
                                        </div> --}}
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-primary">
                                                Salvar
                                            </button>
                                        </div>
                                    </div>
                             </div>
                        </div>
                     </form>
                </div>
            </div>
        </div>
    </div>
</div>
