<!-- Cadastro de Clientes -->

<div class="content" style=" margin-left: 180px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card" >
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Cadastrar Cliente</h4>
                        <p class="card-category">Clientes</p>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/clientes/novo">
                        <div class="row">
                            <div class="col-md-12">
								<div class="form-group">
									<label class="bmd-label-floating">Nome</label>
									<input type="text" class="form-control"  name="nome" required="true">
								</div>
                            </div>
                            <div class="col-md-12">
								<div class="form-group">
									<label for="email" class="bmd-label-floating">E-mail</label>
                    				<input type="email" class="form-control" name="email" required="true">
								</div>
                            </div>
                            <div class="col-md-12">
								<div class="form-group">
									<label for="telefone"class="bmd-label-floating">Telefone</label>
                    				<input type="text" class="form-control" name="telefone" required="true">
								</div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Cadastrar</button>
                        <a class="btn btn-secundary pull-left" href="/clientes/allClientes">Voltar </a>
                        <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
