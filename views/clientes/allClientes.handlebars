<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<br>
				<div class="d-flex justify-content-end" style="margin-bottom: 15px;"><a href="/clientes/cadastrar"
						class="btn btn-primary novoProd">Novo Cliente</a>
				</div>
				<div class="card">
					<div class="card-header card-header-primary">
						<h4 class="card-title ">Lista de clientes</h4>
						<p class="card-category">Lista contendo os dados de todos os clientes</p>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table">
								<thead class=" text-primary">
									<th>Id</th>
									<th>Nome</th>
									<th>E-mail</th>
									<th>Telefone</th>
									<th>Ações</th>
								</thead>
								<tbody>
									{{#each clientes}}
									<tr>
										<td>{{this.idCliente}}</td>
										<td>{{this.nome}}</td>
										<td>{{this.email}}</td>
										<td>{{this.telefone}}</td>
										<td class="td-actions text-left">
											<form action="/clientes/remover" method="post">
												<a href="/clientes/edit/{{this.idCliente}}" rel="tooltip"
													title="Edit Task" class="btn btn-primary btn-link btn-sm">
													<i class="material-icons">edit</i>
												</a>
												<button id="btnExcluir" type="button" rel="tooltip" title="Remove"
													class="btn btn-danger btn-link btn-sm" data-toggle="modal"
													data-target="#mymodal">
													<i class="material-icons">close</i>
												</button>
												<div id="mymodal" class="modal fade" id="exampleModalCenter"
													tabindex="-1" role="dialog"
													aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
													<div class="modal-dialog modal-dialog-centered" role="document">
														<div class="modal-content">
															<div class="modal-header">
																<h5 class="modal-title" id="exampleModalLongTitle">
																	Deseja realmente excluir o cliente "{{this.nome}}"?
																</h5>
																<button type="button" class="close" data-dismiss="modal"
																	aria-label="Close">
																	<span aria-hidden="true">&times;</span>
																</button>
															</div>
															{{!-- <div class="modal-body">
																Deseja excluir os dados?
															</div> --}}
															<div class="modal-footer">
																<button type="button" class="btn btn-secondary" data-dismiss="modal">
																	Cancelar
																	</button>
																<button type="submit" class="btn btn-danger botao">
																	<input type="hidden" name="id"
																		value="{{this.idCliente}}">
																	Excluir
																</button>
															</div>
														</div>
													</div>
												</div>
											</form>
										</td>
									</tr>
									{{else}}
									<h4 class="mt-2">Nenhum Cliente cadastrado!</h4>
									{{/each}}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
