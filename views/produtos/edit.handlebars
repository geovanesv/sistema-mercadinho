<!-- Cadastro de produtos -->
<div class="content" style="margin-top: 20px; margin-left: 180px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Editar Produto: {{produto.nome}}</h4>
                        <p class="card-category">Produtos</p>
                    </div>

                    <div class="card-body">
                        <form action="/produtos/edit" method="post">
                            <input type="hidden" name="id" value="{{produto.idProduto}}" />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="nome" class="bmd-label-floating">Nome:</label>
                                        <input type="text" name="nome" value="{{produto.nome}}" class="form-control" required="true" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="categoria">Categoria</label>
                                        <select name="categoria" id="categoria" class="form-control">
                                            <option value="{{produto.categoria}}">{{produto.categoria}}</option>
                                            <option value="Alimentos">Alimentos</option>
                                            <option value="Congelados e frios">Congelados e frios</option>
                                            <option value="Limpeza">Limpeza</option>
                                            <option value="Higiene pessoal">Higiene pessoal</option>
                                            <option value="Bebidas">Bebidas</option>
                                            <option value="Papelaria">Papelaria</option>
                                            <option value="variedades">Variedades</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Fornecedor</label>
                                        <select name="id" class="form-control" required="true">
                                            {{#each fornecedores}}
                                                <option value="{{this.idFornecedor}}">{{this.nome}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="preco" class="form-label">Preço:</label>
                                        <input type="text" name="preco" value="{{produto.preco}}" class="form-control" required="true" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Quantidade</label>
                                        <input id="qt_produto" name="qt_produto" value="{{produto.qt_produto}}" type="number" class="form-control" style="width:100%" required="true" /> 
                                    </div>
                                </div>
                            </div>
                            <button id="btnEditar" type="button" class="btn btn-primary pull-right"  data-toggle="modal" data-target="#mymodal">Salvar Alterações</button>
                            <a class="btn btn-secundary pull-left" href="/produtos/allProdutos">Voltar </a>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




            <div id="mymodal" class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Deseja salvar alterações no produto?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        {{!-- <div class="modal-body">
                            Deseja Editar os dados?
                        </div> --}}
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">
                                Salvar
                                <img src="/imagens/editar.png" alt="Editar-produto" height="22px">
                            </button>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>