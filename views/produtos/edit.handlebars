<div>
    <h1 style="margin-top: 15px;margin-bottom: 15px;">Editar Produto: {{produto.nome}}</h1>
    <form action="/produtos/edit" method="post">
        <input type="hidden" name="id" value="{{produto.idProduto}}" />
        <div class="col-md-6">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" name="nome" value="{{produto.nome}}" class="form-control" />
        </div>
        <div class="col-md-6">
            <label for="categoria">Categoria</label>
            <select name="categoria" id="categoria" class="form-control">

                <option value="{{produto.categoria}}">{{produto.categoria}}</option>
                <option value="Alimentos">Alimentos</option>
                <option value="Congelados e frios">Congelados e frios</option>
                <option value="Limpeza">Limpeza</option>
                <option value="Higiene pessoal">Higiene pessoal</option>
                <option value="Bebidas">Bebidas</option>
                <option value="Papelaria">Papelaria</option>
                <option value="variedades">Variedades</option>
            </select>
        </div>


        <div class="col-md-6">
            <label for="preco" class="form-label">Pre√ßo:</label>
            <input type="text" name="preco" value="{{produto.preco}}" class="form-control" />
        </div>


        <div class="col-md-6" style="margin-top: 15px; margin-left:5px">
            <button id="btnEditar" type="button" class="btn btn-primary" data-toggle="modal" data-target="#mymodal">
                Editar
                <img src="/imagens/editar-2.png" alt="Editar-produto" height="22px">
            </button>

            <button type="submit" class="btn btn-secondary">
                Voltar
                <a href="/produtos/allProdutos"></a>
            </button>
        </div>



        <div id="mymodal" class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Editar produto?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Deseja Editar os dados?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary">
                            Salvar Dados
                            <img src="/imagens/editar.png" alt="Editar-produto" height="22px">
                        </button>
                    </div>
                </div>
            </div>
        </div>



