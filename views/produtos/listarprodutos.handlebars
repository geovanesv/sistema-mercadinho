<div class="content" style="text-transform: uppercase;">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<br>
				<div class="d-flex justify-content-end" style="margin-bottom: 15px;"><a href="/produtos/cadastrar"
						class="btn btn-primary novoProd">Novo Produto</a>
				</div>
				<div class="card">
					<div class="card-header card-header-primary">
						<h4 class="card-title ">Lista de produtos</h4>
						<p class="card-category">Lista contendo os dados de todos os produtos</p>
					</div>
					<div class="card-body" style="text-align: center;">
						<div class="table-responsive">
							<table class="table">
								<thead class="text-primary tabela-bold" >
									<th>Id</th>
									<th>Nome</th>
									<th>Categoria</th>
									<th>Preco</th>
									<th>Quantidade</th>
									<th>idFornecedor</th>
									<th>Ações</th>
								</thead>
								<tbody >
									{{#each produtos}}
									<tr>
										<td>{{this.idProduto}}</td>
										<td>{{this.nome}}</td>
										<td>{{this.categoria}}</td>
										<td>R$ {{this.preco}}</td>
										<td>{{this.qt_produto}}</td>
										<td>{{this.idFornecedor}}</td>
										<td class="td-actions text-left">
												<a href="/produtos/edit/{{this.idProduto}}" rel="tooltip"
													title="Edit Task" class="btn btn-primary btn-link btn-sm">
													<i class="material-icons">edit</i>
												</a>
											<form action="/produtos/remove" method="post">
												<button id="btnExcluir" type="button" rel="tooltip" title="Remove"
													class="btn btn-danger btn-link btn-sm" data-toggle="modal"
													data-target="#mymodal">
													<i class="material-icons">close</i>
												</button>
												<div id="mymodal" class="modal fade" id="exampleModalCenter"
													tabindex="-1" role="dialog"
													aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
													<div class="modal-dialog modal-dialog-centered" role="document">
														<div class="modal-content">
															<div class="modal-header">
																<h5 class="modal-title" id="exampleModalLongTitle">
																	Deseja realmente excluir esse produto "{{this.nome}}"?</h5>
																<button type="button" class="close" data-dismiss="modal"
																	aria-label="Close">
																	<span aria-hidden="true">&times;</span>
																</button>
															</div>
															{{!-- <div class="modal-body">
																Deseja excluir os dados?
															</div> --}}
															<div class="modal-footer">
																<button type="button" class="btn btn-secondary"
																	data-dismiss="modal">Fechar</button>
																<button type="submit" class="btn btn-danger botao">
																	<input type="hidden" name="id"
																		value="{{this.idProduto}}">
																	Excluir
																	<img src="/imagens/trash.svg" alt="Excluir-produto"
																		height="22px">
																</button>
															</div>
														</div>
													</div>
												</div>
											</form>
										</td>
									</tr>
									{{else}}
									<h4 class="mt-2">Nenhum Cliente cadastrado!</h4>
									{{/each}}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



