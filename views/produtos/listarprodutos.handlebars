<div id="conteudo" style="margin-left:20px">
	<h1>Lista de Produtos </h1>
	<br>

	<table class="table " style="width: 90%;">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Nome</th>
				<th scope="col">Categoria</th>
				<th scope="col">Preco</th>
				<th scope="col">Quantidade</th>
				<th scope="col" colspan="2" class="acoes">Ações</th>
			</tr>
		</thead>
		<tbody>
			{{#each produtos}}
			<tr style="text-align: center;">
				<td>{{this.idProduto}}</td>
				<td>{{this.nome}}</td>
				<td>{{this.categoria}}</td>
				<td>R$ {{this.preco}}</td>
				<td>{{this.qt_produto}}</td>
				<td class="btnAcoes">
							<a href="/produtos/edit/{{this.idProduto}}" class="btn btn-success">
								Editar
								<img src="/imagens/editar-2.png" alt="Editar-Produto" height="22px">
							</a>

				</td>
				<td class="btnAcoes">
					<form action="/produtos/remove" method="post" id="form">
						<button id="btnExcluir" type="button" class="btn btn-danger" data-toggle="modal"
							data-target="#mymodal">
							Excluir
							<img src="/imagens/editar-2.png" alt="Excluir-produto" height="22px">
						</button>
						<div id="mymodal" class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
							aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
							<div class="modal-dialog modal-dialog-centered" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title" id="exampleModalLongTitle">excluir produto?</h5>
										<button type="button" class="close" data-dismiss="modal" aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
									<div class="modal-body">
										Deseja excluir os dados?
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary"
											data-dismiss="modal">Fechar</button>
										<button type="submit" class="btn btn-danger botao">
											<input type="hidden" name="id" value="{{this.idProduto}}">
											Excluir
											<img src="/imagens/trash.svg" alt="Excluir-produto" height="22px">
										</button>
									</div>
								</div>
							</div>
						</div>
					</form>

				</td>
			</tr>
			{{else}}
			<h4 class="mt-2">Nenhum Produto cadastrado!</h4>
			{{/each}}
		</tbody>
	</table>
</div>