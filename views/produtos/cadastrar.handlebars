<!-- Cadastro de produtos -->

<div class="content" style=" margin-left: 180px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card" >
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Cadastrar Produto</h4>
                        <p class="card-category">Produtos</p>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/produtos/add">
                        <div class="row">
                            <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Código</label>
                                <input type="text" class="form-control" name="codProduto" required="true">
                            </div>
                            </div>
                            <div class="col-md-12">
                              <div class="form-group">
                                  <label class="bmd-label-floating">Nome</label>
                                  <input type="text" class="form-control" name="nome" required="true">
                              </div>
                            </div>
                            <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Categoria</label>
                                <select name="categoria" id="categoria" class="form-control" required="true">
                                    <option value="Alimentos">Alimentos</option>
                                    <option value="Congelados e frios">Congelados e frios</option>
                                    <option value="Limpeza">Limpeza</option>
                                    <option value="Higiene pessoal">Higiene pessoal</option>
                                    <option value="Bebidas">Bebidas</option>
                                    <option value="Papelaria">Papelaria</option>
                                    <option value="Variedades">Variedades</option>
                                </select>
                            </div>
                            </div>
                            <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Fornecedor</label>
                                <select name="id" class="form-control" required="true">
                                    {{#each fornecedores}}
                                        <option value="{{this.idFornecedor}}">{{this.nome}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            </div>
                            <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Preço</label>
                                <input id="preco" name="preco" class="form-control" style="width:100%" required="true" /> 
                            </div>
                            </div>
                            <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Quantidade</label>
                                <input id="qt_produto" name="qt_produto" type="number" class="form-control" style="width:100%" required="true" /> 
                            </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Cadastrar</button>
                        <a class="btn btn-secundary pull-left" href="/produtos/allProdutos">Voltar </a>
                        <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

