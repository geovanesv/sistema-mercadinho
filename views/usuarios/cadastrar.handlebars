<div class="container mt-4 container-formulario">
    <div class="card">
        <div class="card-header">
            Cadastrar usuario
        </div>
        <div class="card-body">
            <form action="/usuarios/add" method="POST">
                <div class="form-group">
                    <label for="name">Nome</label>
                    <input type="text" class="form-control"  name="nome">
                </div>                
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control"  name="email">
                </div>                
                <div class="form-group">
                    <label for="password">Senha</label>
                    <input type="password" class="form-control" name="password">
                </div>            

                <div class="row md-2" style="margin-top: 15px; margin-left:5px">
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                    <div class="col-sm-2">
                        <a class="btn btn-danger" href="/usuarios//allUsuarios">Voltar</a> {{!-- /usuarios/allUsuarios --}}
                    </div>

                </div>
            </form>                
        </div>
    </div>
    {{#if message}}
    <h4 class="alert alert-danger mt4">{{message}}</h4>
    {{/if}}
</div>