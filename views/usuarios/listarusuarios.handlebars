{{> menu}}

<div class="main-w3layouts wrapper">
	<h1 class="d-flex justify-content-center" style="margin-top: 30px;" >Lista de usuarios</h1>
	<div class="main-agileinfolista ">
		
		<div class="agileits-top container-tabela">
			<div class="d-flex justify-content-end"><a href="/usuarios/cadastrar" class="btn btn-success novoProd">Novo</a></div>
			
			<table class="table table-bordered ">
				<thead>
					<tr class="titulo">
						<th scope="col">Id</th>
						<th scope="col">Nome</th>
						<th scope="col">email</th>
						<th scope="col">senha</th>
						<th scope="col" colspan="2" class="acoes">Ações</th>
					</tr>
				</thead>
				<tbody>
					{{#each usuarios}}
						<tr>
							<th scope="row">{{this.id}}</th>
							<td>{{this.nome}}</td>
							<td>{{this.email}}</td>
							<td>{{this.password}}</td>
							<td class="btnAcoes">
								<a href="/usuarios/edit/{{this.id}}" class="btn btn-success">
									Editar
								</a>
							</td>
							<td class="btnAcoes">
								<form action="/usuarios/remove" method="post">
									<button type="submit" class="btn btn-danger">
          								<input type="hidden" name="id" value="{{this.id}}">
										Excluir
									</button>
								</form>
							
							</td>
						</tr>
					{{else}}
					<h4 class="mt-2">Nenhum usuario cadastrado!</h4>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>