<!-- Realizar Venda -->

<div class="content" style=" margin-left: 180px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card" >
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Realizar Venda</h4>
                        <p class="card-category">Vendas</p>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/vendas/realizarVenda">
                        <div class="row">
                            <div class="col-md-12">
								<div class="form-group">
									<label for="cliente">Cliente:</label>
									<select name="cliente" id="cliente">
										{{#each clientes}}
											<option value="{{this.idCliente}}">{{this.nome}}</option>
										{{/each}}
									</select>
								</div>
                            </div>
                            <div class="col-md-12">
								<div class="form-group">						
									<label for="produto">Produto:</label>
									<select name="produto" id="produto">
										{{#each produtos}}
											<option value="{{this.idProduto}}">{{this.nome}}</option>
										{{/each}}
									</select>									
								</div>
                            </div>
                            <div class="col-md-12">
								<div class="form-group">
									<label for="fornecedor">Fornecedor:</label>
									<select name="fornecedor" id="fornecedor">
										{{#each fornecedores}}
											<option value="{{this.idFornecedor}}">{{this.nome}}</option>
										{{/each}}
									</select>
								</div>
                            </div>
                            <div class="col-md-12">
								<div class="form-group">
									<label for="quantidade">Quantidade:</label>
      								<input type="number" name="quantidade" id="quantidade">
								</div>
							</div>

                        </div>
                        <button type="submit" class="btn btn-primary pull-right">Realizar Venda</button>
                        <a class="btn btn-secundary pull-left" href="/vendas/listarvendas">Voltar </a>
                        <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


